<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center mt-3 mb-4">New Meme</h1>
    <div class="col-6 offset-3 mt-3">
        <form action="/meme/" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" name="meme[title]" class="form-control" required>
                <div class="valid-feedback">OK!</div>
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Category</label>
                <select id="category" name="meme[category]" class="form-control" required>
                    <option value="Funny">Funny</option>
                    <option value="Animals">Animals</option>
                    <option value="Sport">Sport</option>
                    <option value="Gaming">Gaming</option>
                    <option value="Weird">Weird</option>
                    <option value="Movies">Movies</option>
                    <option value="Politics">Politics</option>
                </select>
            </div>
            <div class="mb-2">
                <label for="image" class="form-label">Add an image</label>
                <input type="file" class="form-control mb-2" name="image" id="image" required>
                <span class="text-secondary">Maximum size: 3MB</span>
            </div>
            <div class="mb-2">
                <button class="btn btn-success text-light">Add Meme</button>
            </div>
        </form>
        <a href="/" class="link-secondary">Back to Home</a>
    </div>
</div>